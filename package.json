{
  "name": "nanogl-post",
  "version": "0.3.1",
  "description": "post processing for nanogl",
  "main": "post.js",
  "scripts": {
    "build": "node tools/make_templates.js",
    "test": "tsc && karma start",
    "gztest": "browserify post.js -o gztest.js && uglifyjs --screw-ie8 -m -c warnings=false -o gztest.min.js -- gztest.js && gzip -k -9 gztest.min.js && stat -f%z gztest.min.js.gz && rm ./*gztest*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/plepers/nanogl-post.git"
  },
  "keywords": [
    "nanogl",
    "post",
    "effect"
  ],
  "author": "Pierre Lepers",
  "license": "GPL-2.0",
  "bugs": {
    "url": "https://github.com/plepers/nanogl-post/issues"
  },
  "homepage": "https://github.com/plepers/nanogl-post#readme",
  "dependencies": {
    "@types/gl-matrix": "^2.4.5",
    "gl-matrix": "^3.1.0",
    "nanogl": "^2.1.0",
    "nanogl-camera": "^1.1.1",
    "nanogl-pf": "1.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.7.4",
    "@babel/preset-env": "^7.7.4",
    "babelify": "^10.0.0",
    "browserify": "^16.5.0",
    "expect.js": "^0.3.1",
    "karma": "^4.4.1",
    "karma-browserify": "^6.1.0",
    "karma-chrome-launcher": "^3.1.0",
    "karma-firefox-launcher": "^0.1.7",
    "karma-mocha": "^1.3.0",
    "karma-safari-launcher": "^1.0.0",
    "karma-sauce-launcher": "^2.0.2",
    "mocha": "^6.2.2",
    "sinon": "^7.5.0",
    "typescript": "^3.7.2",
    "watchify": "^3.11.1",
    "nanogl-template": "^1.0.3",
    "string-template": "1.0.0"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "@babel/preset-env"
          ]
        }
      ],
      [
        "nanogl-template",
        {
          "extensions": [
            ".vert",
            ".frag",
            ".glsl"
          ]
        }
      ]
    ]
  }
}
